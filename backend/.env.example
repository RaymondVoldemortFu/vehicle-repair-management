# 应用基本配置
PROJECT_NAME=车辆维修管理系统
VERSION=1.0.0
API_V1_STR=/api/v1

# 安全配置
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# 数据库配置
DATABASE_URL=postgresql://username:password@localhost/vehicle_repair_db
DATABASE_TEST_URL=postgresql://username:password@localhost/vehicle_repair_test_db

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_SESSION_URL=redis://localhost:6379/1

# 邮件配置
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=车辆维修管理系统

# 文件上传配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 分页配置
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# 开发环境配置
DEBUG=False
TESTING=False

# CORS配置
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# 数据库连接池配置
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# 缓存配置
CACHE_EXPIRE_TIME=3600

# 安全配置
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# 业务配置
ORDER_NUMBER_PREFIX=RO
WORKER_ID_PREFIX=WK
ADMIN_ID_PREFIX=AD

# 文件存储配置
STATIC_FILES_DIR=static
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# 日志轮转配置
LOG_ROTATION_SIZE=10MB
LOG_BACKUP_COUNT=5
LOG_RETENTION_DAYS=30

# 监控配置
ENABLE_METRICS=True
METRICS_PORT=9090

# 限流配置
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
